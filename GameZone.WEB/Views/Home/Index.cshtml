@{
    ViewBag.Title = "Home | Game Zone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section style{
    <style>
        #game {
            width: 100%;
        }
    </style>
}
<!-- LOADER -->
@*<div id="loader-overflow">
        <div id="loader3">Please enable JS</div>
    </div>*@



<section class="page-section home">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-5 col-md-5 col-xs-10 col-md-offset-1 col-xs-offset-1 col-sm-offset-1 home-text">
                <h1 class="main-header">Suscribe for fun &  <strike>cool</strike> awesome games!</h1>
                <h5 class="text-justify ">
                    Play over 500 games on GameZone with just a single button click. Unleash over 500 fun, exciting and addictive games on GameZone.
                </h5>
                <a class="btn btn-lg  smooth-scroll scroll-down animate" data-animate="wobble" data-duration="1.0s" data-delay="0.4s" data-iteration="2" type="button" data-toggle="modal" data-target="#exampleModal">Subscribe for games</a>
            </div>
            <div class="col-sm-5 col-md-6 col-xs-12 ">
                <img src="~/Content/images/GameListHeroLeftLarge.png" alt="monkey bubble shooter characters">
                <!-- GameListHeroLeftLarge.png -->
            </div>
        </div>
    </div>
</section>
<section class="page-section pale-white trial">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-5 col-md-7 col-xs-10 col-md-offset-1 col-xs-offset-1 col-sm-offset-1">
                <div class="panel-body">
                    <iframe width="800" height="600" id="bonusGame" src="http://funmobilelive.html5games.net/serve?portal_id=4774417016029184&game_id=6066710801022976&branding_id=5848139915329536&ad_id=5284106556407808&portal_localization_id=4539491968614400&clear_cache=yes"></iframe>
                    @*<a href="" class="" data-toggle="modal" data-target="#exampleModal">
                        <img src="~/Content/images/whack-a-mole-large.png" alt="" class="animate" data-animate="bounceIn" data-duration="1.0s" data-delay="0.2s">
                                                </a>*@
                </div>
            </div>
            <div class="col-sm-5 col-md-3 col-xs-12">
                <h2 class="main-header">Bonus Game!</h2>
                <h5 class="text-justify ">
                    Try our FREE Game. We have over 500 other interesting games. To have it all, just click <a  data-toggle="modal" data-target="#exampleModal">here</a> to subscribe.
                </h5>
                <ul class="features_list">
                    <li>
                        <span class="icons"><i class="fa fa-smile-o blue_c"></i></span>
                        <span class="text"> Easy and Fun</span>
                    </li>
                    <li>
                        <span class="icons"><i class="fa fa-star blue_c"></i></span>
                        <span class="text"> Ranks on Leaderboards </span>
                    </li>
                </ul>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h3 class="modal-title text-center" id="exampleModalLabel">Subscribe for Games</h3>
                    </div>
                    <div class="modal-body">
                        <form class="fomr-horizontal">
                            <div class="form-group row">
                                <div class="col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                                    <input type="text" class="form-control allownumericwithoutdecimal" id="recipient-name" placeholder="kindly enter your phone number" ng-model="basicObj.t">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                                    <table>
                                        <tr>
                                            <td style="padding:10px;">
                                                <span>N50 Weekly</span>
                                            </td>
                                            <td style="padding:10px;">
                                                <input type="radio" name="subType" id="subType1" value="0" ng-model="basicObj.sT">
                                            </td>
                                            <td style="padding:10px;">
                                                <span style="margin-right:10px;">N10 Daily</span>
                                            </td>
                                            <td style="padding:10px;">
                                                <input type="radio" name="subType" id="subType2" value="1" ng-model="basicObj.sT">
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 col-sm-offset-3  col-xs-6 col-xs-offset-3">
                                    <button class="btn btn-primary btn-block disabledCtrl" ng-click="SaveNewSubscriber()"> Subscribe</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="page-section " id="game-area">
    <div class="game-filter">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="filter-container isotopeFilters">
                        <ul class="list-inline filter text-center">
                            @*<li class="active"><a href="#" data-filter="*">All games</a></li>*@
                            <li class="active gameMenu" id="family"><a href="#" data-filter=".family">Family</a></li>
                            <li class="gameMenu" id="strategy"><a href="#" data-filter=".strategy">Strategy</a></li>
                            <li class="gameMenu" id="action"><a href="#" data-filter=".action">Action</a></li>
                            <li class="gameMenu" id="cards"><a href="#" data-filter=".cards">Cards</a></li>
                            <li class="gameMenu" id="sports"><a href="#" data-filter=".sports">Sports</a></li>
                            <li class="gameMenu" id="adventure"><a href="#" data-filter=".adventure">Adventure</a></li>
                            <li class="gameMenu" id="puzzle"><a href="#" data-filter=".puzzle">Puzzle</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div id="isotopeContainer" class="isotopeContainer"></div>
        </div>
    </div>
    

    <div class="row">
        <div class="col-sm-5 col-md-5 col-xs-10 col-md-offset-1 col-xs-offset-1 col-sm-offset-1 home-text">
            <a href="/Games/List" class="btn btn-lg smooth-scroll scroll-down animate" data-animate="wobble" data-duration="1.0s" data-delay="0.4s" data-iteration="2" type="button">View All</a>
        </div>
    </div>
</section>



@section scripts{
    <script type="text/javascript">
        var _Title = "@ViewBag.Title";
    </script>
<script src="~/Content/js/notify.min.js"></script>
<script src="~/Scripts/Home/Index.js"></script>

    @*@Scripts.Render("~/bundles/Home-IndexPageJs")*@
}