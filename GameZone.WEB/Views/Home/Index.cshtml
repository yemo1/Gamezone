@{
    ViewBag.Title = "Home | Game Zone";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool IsMobile = (bool) ViewBag.IsMobile;
}


@section style{
    <style>
        .game-container {
            display: block;
            height: 30em;            
            position: relative;
        }

        #play.play {
            width: 100% !important;
            height: 600px !important;
            left: 0 !important;
        }

        #ajaxbar {
            background:#b2d3e6;
        }
        .isotopeSelector.block {
            height: auto;
        }
    </style>
}

<section class="page-section pale-white home">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 col-md-5 col-xs-12 col-md-offset-1  home-text">
                <h1 class="main-header">Play fun & <strike>cool</strike><br /> awesome games!</h1>
                <h5 class="text-justify "> 
                    @*Play over 500 games on GameZone with just a single button click.
    Unleash over 500 fun, exciting and addictive games on GameZone. Just one click away*@               
                     Play awesome HTML5 games available on your smartphones, tablet or PC. Our catalogue is often updated with new games to keep you engaged!
                </h5>
                <a class="btn bitsumishi smooth-scroll scroll-down animate" href="http://funmobilelive.html5games.net/serve?portal_id=4774417016029184&game_id=6066710801022976&branding_id=5848139915329536&ad_id=5284106556407808&portal_localization_id=4539491968614400&clear_cache=yes" data-animate="wobble" data-duration="1.0s" data-delay="0.4s" data-iteration="2" type="button">play free game <i class="fa fa-play-circle"></i></a>
                @*data-toggle="modal" data-target="#exampleModal"*@
            </div>
            <div class="col-sm-6 col-md-6 col-xs-12  ">
                
                <!-- GameListHeroLeftLarge.png -->
                <div id="slideshow">
                    <div>
                        <img src="~/Content/images/GameListHeroLeftLarge.png" alt="monkey bubble shooter characters">
                    </div>
                    <div>
                        <img src="~/Content/images/cards.png" alt="Cards">
                    </div>
                   <div>
                       <img src="~/Content/images/frame_01_normal.png" alt="Masked bomber" />
                   </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="page-section pale-white trial hide">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12  col-xs-12  col-md-6 col-md-offset-1">
                <div class="panel-heading orange-bg"  id="free-play">
                    <h3 class="freegame-heading"> <i class="fa fa-play"></i>&nbsp; &nbsp; PLAY OUR FREE GAME</h3>
                </div>
                <div class="panel-body game-container">
                    <iframe width="100%" height="100%" style="background:#b2d3e6!important;" id="bonusGame" src="http://funmobilelive.html5games.net/serve?portal_id=4774417016029184&game_id=6066710801022976&branding_id=5848139915329536&ad_id=5284106556407808&portal_localization_id=4539491968614400&clear_cache=yes"></iframe>
                </div>
            </div>
            <div class=" col-md-5 col-xs-12">
                <h1 class="main-header top-space">Subcribe for More!</h1>
                <h5 class="text-justify ">
                    Get so much more by subscribing a token for loads of interesting games. We have the best Arcade, Sports, Family and Puzzle games! You are just one click away to having it all.
                </h5>
                <a class="btn animate" data-animate="wobble" data-duration="1.0s" data-delay="0.4s" data-iteration="2" type="button" data-toggle="modal" data-target="#exampleModal">Subscribe for our games </a>
              
            </div>
        </div>       
    </div>
</section>
 <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title text-center" id="exampleModalLabel">Subscribe for Games</h3>
            </div>
            <div class="modal-body">
                <form class="fomr-horizontal">
                    <div class="form-group row">
                        <div class="col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <input type="text" class="form-control allownumericwithoutdecimal" id="recipient-name" placeholder="kindly enter your phone number" ng-model="basicObj.t">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <table>
                                <tr>
                                    <td style="padding:10px;">
                                        <span>N50 Weekly</span>
                                    </td>
                                    <td style="padding:10px;">
                                        <input type="radio" name="subType" id="subType1" value="0" ng-model="basicObj.sT">
                                    </td>
                                    <td style="padding:10px;">
                                        <span style="margin-right:10px;">N10 Daily</span>
                                    </td>
                                    <td style="padding:10px;">
                                        <input type="radio" name="subType" id="subType2" value="1" ng-model="basicObj.sT">
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 col-sm-offset-3  col-xs-6 col-xs-offset-3">
                            <button class="btn btn-primary btn-block disabledCtrl" ng-click="SaveNewSubscriber()"> Subscribe</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<section class="page-section " id="game-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12 title">
                <h1 class="text-center blue_c main-header"> <i class="fa fa-gift "></i>OUR GAMES</h1>
            </div>
            <div class="col-md-12">
                <div class="game-loader text-center">
                    <img src="~/Content/images/logo.png" alt="Gamezone logo" />
                </div>  
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div id="isotopeContainer" class="isotopeContainer text-center">                          
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <a href="/Games/List" id="more-btn" class="btn  smooth-scroll scroll-down animate orange-btn" type="button">View All </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <a class="flwpug_getpaid" data-PBFPubKey="FLWPUBK-21d231c2eef47b545298eb299494af6c-X" data-txref="rave-checkout-1516369113" data-amount="" data-customer_email="user@example.com" data-currency="NGN" data-pay_button_text="Pay" data-country="NG" data-custom_title="Gamezone" data-custom_description="" data-redirect_url="" data-custom_logo="" data-payment_method="card" data-exclude_banks=""></a>                
            </div>
        </div>
    </div>
</section>

