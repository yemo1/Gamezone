@{
    ViewBag.Title = "Home | Game Zone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section style{
    <style>
        .game-container {
            display: block;
            height: 30em;            
            position: relative;
        }

        #play.play {
            width: 100% !important;
            height: 600px !important;
            left: 0 !important;
        }
        .container{
            width:100%;
        }
    </style>
}
