@* PC Login/Registration Modal *@
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title text-center animated hide" id="login-header"> Login</h3>
                <h3 class="modal-title text-center animated" id="register-header">Create Account</h3>
            </div>
            <div class="modal-body">
                <form class="form-horizontal hide animated" id="login-form">
                    <div class="form-group row">
                        <div class="col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <input id="txtUsername" type="text" class="form-control" placeholder="Username" ng-model="loginObj.szUsername" aria-describedby="sizing-addon1">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <input id="txtPassword" type="password" class="form-control" placeholder="Password" ng-model="loginObj.szPassword">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 col-sm-offset-3  col-xs-6 col-xs-offset-3">
                            <img src="~/Content/images/loadingGif.gif" id="logLoda" style="display: block; margin-left: auto; margin-right: auto;" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 col-sm-offset-3  col-xs-6 col-xs-offset-3">
                            <button class="btn btn-primary btn-block disabledCtrl" ng-click="userLogin()"> Login</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3">
                            <hr />
                            <p class="text-center">Don't have an account?  <a id="register-link" class="disabledCtrl">Register</a></p>
                        </div>
                    </div>
                </form>
                <form class="form-horizontal animated" id="register-form">
                    <div class="form-group row">
                        <div class="col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <input type="text" id="txtRegUsername" class="form-control allownumericwithoutdecimal" placeholder="Email address / Phone No" ng-model="registerObj.szUsername">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <input type="password" id="txtRegPassword" class="form-control " placeholder="Password" ng-model="registerObj.szPassword">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <input type="password" id="txtRegPasswordConfirm" class="form-control " placeholder="Confirm password" ng-model="registerObj.szConfirmPassword">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 col-sm-offset-3  col-xs-6 col-xs-offset-3">
                            <img src="~/Content/images/loadingGif.gif" id="regLoda" style="display: block; margin-left: auto; margin-right: auto;" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 col-sm-offset-3  col-xs-6 col-xs-offset-3">
                            <button class="btn btn-primary btn-block disabledCtrl" ng-click="RegisterNewUser()"> Register</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3">
                            <hr />
                            <p class="text-center">Already have an account? <a id="login-link" class="disabledCtrl">Login</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


